.mixer
  background-color $secondary
  border-top 10px solid $header-light
  min-height 100vh
  text-align center

.cards
  // +$above('sm')
  //   $grid('row', 'center')
  // +$below('sm')
  //   $grid('column')

.info
  padding-bottom 80px
  width 100%
  h2
    font-size $header-date
    margin-top -30px
    color $gray-text
  h3
    color $gray-text
    margin-bottom 0
    font-weight 500
    font-size 1.17em
  h4
    color $gray-text
    margin-bottom 0
    font-weight 300
    font-size 1.17em

.logos

  img
    $grid('row', 'center')
    width 600px
    max-width 80%
    margin-left auto
    margin-right auto
    +$below('sm')
      max-width 100%


.sponsors
  +$below('sm')
    width 100%
  +$above('sm')
    max-height 500px
    width 50%
  img
    width 100%

.you
  margin 50px 0
  color $action-pink
  h2
    font-size 2.1rem
    margin 30px 0
    +$below('sm')
      font-size 1.5rem
      max-width 70%
      margin-left auto
      margin-right auto
  img
    max-width 20px

.presented
  background-image linear-gradient($secondary, #91eeff)
  padding 100px 0 175px 0
  width 100%
  img
    width 300px
  h2
    color $gray-text
    margin-top 100px
    margin-bottom 0
  p
    color $light-gray
    padding 10px
    font-size 1rem

  h3
    color $light-gray
    padding-top 25px
    padding-bottom 0
    margin-bottom 0
    font-size 1rem
    font-weight 400
  .lyft
    img
      max-width 130px
      margin-top 30px
