.hackathon
  background-color $gray-bg
  border-top 10px solid $header-light
  min-height 100vh
  text-align center
  padding-bottom 50px
  width 100%

.content
  $grid('column', 'center')
  min-height 100%
  margin-bottom 20px
  +$below('sm')
    margin-bottom 120px

.info
  background-color $gray-bg
  h1
    color $gray-text
    font-size $date-text
    margin-top -30px
  h3
    color $gray-text
    margin-bottom 0
    font-weight 500
    font-size 1.17em
  h4
    color $gray-text
    margin-bottom 0
    font-weight 300
    font-size 1.17em
  h5
    color $gray-text
    margin-bottom 0
    font-weight 300
    font-size 1em
  +$below('sm')
    max-width 94%

.register
  background-color $secondary
  margin-top 50px
  padding 20px 40px
  .volunteers
    font-size 16px
    color $text-gray
    margin-top 50px
    a
      color $primary
  +$below('sm')
    width 100%
    padding 20px 20px
  p
    color $light-gray
    padding 10px
    font-size 1rem
  h1
    color $gray-text
    margin-top 30px
  h3
    color $action-pink
    font-weight 400
  form
    .email
      border-bottom 4px solid $primary
      border-left none
      border-right none
      border-top none
      color $gray-text
      font-size 18px
      width 300px
      &:focus
        border-bottom 4px solid $action-pink
        outline-width 0
      +$below('sm')
        margin-top 20px
        width 80%
    .button
      background-color white
      border 4px solid $action-pink
      border-radius 8px
      box-shadow 0px 3px 10px #888
      color $action-pink
      font-size 18px
      margin-left 20px
      padding 5px 10px
      &:hover
        background-color $action-pink-dark
        color white
        box-shadow none
        cursor pointer
      +$below('sm')
        margin-left 0
        margin-top 20px
        width 80%

.hosted-by
  img
    max-width 200px
    margin-top 20px
    margin-bottom 100px
  h3
    color $light-gray
    padding-top 25px
    padding-bottom 0
    margin-bottom 0
    margin-top 50px
    font-size 1rem
    font-weight 400
